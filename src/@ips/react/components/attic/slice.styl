ScreenLarge = 1600px
ScreenRegular = 1280px
ScreenSmall = 1024px
ScreenMobile = 768px

BlockSizeL = 104px
BlockSizeR = 80px
BlockSizeS = 64px

.slice {
  display: flex;
  width: 100%;
  flex-direction: column;
  pointer-events none
  max-width 100vw
  // overflow hidden // Doesn't work - problems with position sticky, etc
}
.slice__sec {
  display: flex;
  position: relative;
  flex-flow: row wrap;
  width: 960px;
  pointer-events none
}
.slice__sec.align-start {
  align-self: flex-start;
}
.slice__sec.align-center {
  align-self: center;
}
.slice__sec.align-end {
  align-self: flex-end;
}

.slice__sec > *
  pointer-events auto

.slice__sec
  &.table
    display: table;

  &.width100
    width 100%

  for n in (0..12)
    &.{'width'+n}
      width BlockSizeR*n

.screen-size-large
  .slice__sec
    for n in (0..12)
      &.{'width'+n}
        width BlockSizeL*n

.screen-size-regular
  .slice__sec
    for n in (0..12)
      &.{'width'+n}
        width BlockSizeR*n

.screen-size-small
  .slice__sec
    for n in (0..12)
      &.{'width'+n}
        width BlockSizeS*n

.screen-size-mobile
  .slice__sec
    for n in (0..12)
      &.{'width'+n}
        width 100%

