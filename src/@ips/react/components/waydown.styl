// special funny case
.browser-ie
    .waydown
        height 100%
        width 100%
        position relative

        .sprite3d-stage
            transform-style preserve-3d

            position absolute
            left 50%
            top 50%
            // width 100%
            // height 100%
            transition transform .5s cubic-bezier(0.785, 0.135, 0.15, 0.86)
            perspective 290px

            > *
                transform-style preserve-3d
                transition filter .3s, opacity .3s, transform .5s cubic-bezier(.785, .135, .15, .86) // that's kinda circular

