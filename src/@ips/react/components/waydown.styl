.waydown
    height 100%
    width 100%
    
    position relative
    // animation WaydownCamDrift 10s linear infinite

    .sprite3d-stage
        // animation WaydownStageDrift 10s linear infinite
        transform-style preserve-3d

        position absolute
        left 50%
        top 50%
        // width 100%
        // height 100%
        transition transform .5s cubic-bezier(0.785, 0.135, 0.15, 0.86)
        > *
            transform-style preserve-3d
            color white
            transition filter .3s, opacity .3s
