@import url('https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&family=PT+Mono&family=Press+Start+2P&display=swap');

@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1

html.noscroll
body.noscroll
	position: fixed; 
	overflow-y: scroll;
	width: 100%;

body:not(.m-ria)
	background-color grey
	
.ips-app-container
	max-width 1440px
	margin 0 auto
	
.scroll-fixed
	position sticky
	position -webkit-sticky
	// top 0px
	
@keyframes FadeIn
	0%
		opacity 0
	100%
		opacity 1

@keyframes SlideUp
	0%
		transform translateY(50vh)
	100%
		transform translateY(0vh)
		
@keyframes slideInLeft
	0%
		transform translateX(-70%)
		opacity 0
	100%
		transform translateX(0)
		opacity 1
		
@keyframes slideInRight
	0%
		transform translateX(70%)
		opacity 0
	100%
		transform translateX(0)
		opacity 1
	

.gpn-pop-science
	*
		box-sizing border-box
	img
		line-height:  0
		display: block

	// background-color: white

	img.overlay
		line-height: 0

	.backfader-back
		height: var(--sy, 100vh)
		&:after
			content: ''
			position absolute
			inset 0
			background-image: linear-gradient(rgba(black, 0) 0%, rgba(black, 0.5) 50%, rgba(black, 0.6) 75%, rgba(black, 0.9) 100%)

	.text
		p
			margin 0
		p + p
			margin-top 1em

	.coverPage
		max-height 900px
	.coverCont
		min-height: 100vh
		// justify-content space-between
		// gap 120px
		gap 10vh
		padding 100px 0 160px 0

	.coverTitle
		display: inline-flex
		flex-direction: column
		span:nth-child(1)
			align-self: flex-start
		span:nth-child(2)
			align-self: center
		span:nth-child(3)
			align-self: flex-end

